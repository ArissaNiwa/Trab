Mago
		mago.setVida(600);
		mago.setAtaque(rand.nextInt(20) + 5); // valor randomico para o ataque do mago
		mago.setDefesa(rand.nextInt(20) + 20); // valor randomico para a defesa do mago
		mago.setDanoGolpePrimario(rand.nextInt(25) + 20);
		mago.setDanoGolpeSecundario(rand.nextInt(30) + 25);// alterado pq estava "primario"
		mago.setDanoDoEspecial(rand.nextInt(35) + 35);

        mago.setVida(mago.getVida()*1.20);
		mago.setAtaque(mago.getAtaque() + 5);
		mago.setDefesa(mago.getDefesa() + 5);


